{
  "name": "cuban-technology-cleaner",
  "version": "2.0.2",
  "description": "Professional System Cleaner and Optimizer by Pedro IT Solutions",
  "main": "main.js",
  "author": "Pedro IT Solutions",
  "license": "MIT",
  "homepage": "https://windowscleanerpro.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pedro-IT95/windows-cleaner-pro.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:appx": "electron-builder --win appx"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.pedroitsolutions.cubantechnologycleaner",
    "productName": "Cuban Technology Cleaner",
    "copyright": "Copyright Â© 2025 Pedro IT Solutions",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "appx",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Pedro IT Solutions"
    },
    "appx": {
      "displayName": "Cuban Technology Cleaner",
      "publisherDisplayName": "Pedro IT Solutions",
      "applicationId": "CubanTechnologyCleaner",
      "identityName": "PedroITSolutions.CubanTechnologyCleaner"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cuban Technology Cleaner",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  }
}
